<UserControl x:Class="MathGame.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MathGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
        <DockPanel>
            <!--<DockPanel.Background>
            <ImageBrush ImageSource="/MathGame;component/Resources/background_image.jpg" Stretch="UniformToFill"/>
            </DockPanel.Background>-->
            <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" Text="{Binding Timer.Time, StringFormat=Elapsed Time: {0}}" Foreground="Aquamarine" FontSize="24" />
            <StackPanel Margin="10" DockPanel.Dock="Bottom">
                <DockPanel LastChildFill="True">
                    <DockPanel DataContext="{Binding GameInfo}" MinWidth="200" DockPanel.Dock="Right">
                        <StackPanel Visibility="{Binding WinMessage}">
                            <TextBlock Foreground="MediumAquamarine">You Won!</TextBlock>
                            <Button Padding="10" Background="#FF151515" Click="PlayAgain" Foreground="#FFA1FFA1" FontSize="20">Play Again</Button>
                        </StackPanel>
                        <StackPanel Visibility="{Binding LostMessage}">
                            <TextBlock Foreground="MediumAquamarine">You Lost!</TextBlock>
                            <Button Padding="10" Background="#FF151515" Click="PlayAgain" Foreground="#FFFF9085" FontSize="20">Play Again</Button>
                        </StackPanel>
                    </DockPanel>
                    <StackPanel DataContext="{Binding GameInfo}" DockPanel.Dock="Left">
                        <TextBlock Text="{Binding Score, StringFormat=Score: {0}}" Foreground="#FFFFF163" FontSize="24" />
                        <TextBlock Text="{Binding MatchAttempts, StringFormat=Attempts Left: {0}}" Foreground="#FFFF7D41" FontSize="22" />
                    </StackPanel>
                </DockPanel>
            </StackPanel>


        <Grid DataContext="{Binding Slides}" IsEnabled="{Binding AreSlidesActive}" DockPanel.Dock="Top" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
            <Grid.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="1" />
                </Style>
            </Grid.Resources>
            <!-- FirstColumn -->
            <Button Grid.Row="0" Grid.Column="0" IsEnabled="{Binding IsSelectable}" DataContext="{Binding MemorySlides[0]}" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Border Style="{StaticResource SlideBorder}" BorderBrush="{Binding BorderBrush}">
                            <Image Stretch="Fill" Source="{Binding SlideImage}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Row="1" Grid.Column="0" IsEnabled="{Binding IsSelectable}" DataContext="{Binding MemorySlides[1]}" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Border Style="{StaticResource SlideBorder}" BorderBrush="{Binding BorderBrush}">
                            <Image Stretch="Fill" Source="{Binding SlideImage}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Row="2" Grid.Column="0" IsEnabled="{Binding IsSelectable}" DataContext="{Binding MemorySlides[2]}" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Border Style="{StaticResource SlideBorder}" BorderBrush="{Binding BorderBrush}">
                            <Image Stretch="Fill" Source="{Binding SlideImage}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <!-- SecondColumn-->
            <Button Grid.Row="0" Grid.Column="1" IsEnabled="{Binding IsSelectable}" DataContext="{Binding MemorySlides[3]}" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Border Style="{StaticResource SlideBorder}" BorderBrush="{Binding BorderBrush}">
                            <Image Stretch="Fill" Source="{Binding SlideImage}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Row="1" Grid.Column="1" IsEnabled="{Binding IsSelectable}" DataContext="{Binding MemorySlides[4]}" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Border Style="{StaticResource SlideBorder}" BorderBrush="{Binding BorderBrush}">
                            <Image Stretch="Fill" Source="{Binding SlideImage}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Row="2" Grid.Column="1" IsEnabled="{Binding IsSelectable}" DataContext="{Binding MemorySlides[5]}" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Border Style="{StaticResource SlideBorder}" BorderBrush="{Binding BorderBrush}">
                            <Image Stretch="Fill" Source="{Binding SlideImage}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
             <!-- ThirdColumn -->
            <Button Grid.Row="0" Grid.Column="2" IsEnabled="{Binding IsSelectable}" DataContext="{Binding MemorySlides[6]}" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Border Style="{StaticResource SlideBorder}" BorderBrush="{Binding BorderBrush}">
                            <Image Stretch="Fill" Source="{Binding SlideImage}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Row="1" Grid.Column="2" IsEnabled="{Binding IsSelectable}" DataContext="{Binding MemorySlides[7]}" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Border Style="{StaticResource SlideBorder}" BorderBrush="{Binding BorderBrush}">
                            <Image Stretch="Fill" Source="{Binding SlideImage}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Row="2" Grid.Column="2" IsEnabled="{Binding IsSelectable}" DataContext="{Binding MemorySlides[8]}" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Border Style="{StaticResource SlideBorder}" BorderBrush="{Binding BorderBrush}">
                            <Image Stretch="Fill" Source="{Binding SlideImage}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <!-- ForthColumn -->
            <Button Grid.Row="0" Grid.Column="3" IsEnabled="{Binding IsSelectable}" DataContext="{Binding MemorySlides[9]}" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Border Style="{StaticResource SlideBorder}" BorderBrush="{Binding BorderBrush}">
                            <Image Stretch="Fill" Source="{Binding SlideImage}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Row="1" Grid.Column="3" IsEnabled="{Binding IsSelectable}" DataContext="{Binding MemorySlides[10]}" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Border Style="{StaticResource SlideBorder}" BorderBrush="{Binding BorderBrush}">
                            <Image Stretch="Fill" Source="{Binding SlideImage}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Row="2" Grid.Column="3" IsEnabled="{Binding IsSelectable}" DataContext="{Binding MemorySlides[11]}" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Border Style="{StaticResource SlideBorder}" BorderBrush="{Binding BorderBrush}">
                            <Image Stretch="Fill" Source="{Binding SlideImage}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </DockPanel>
</UserControl>
